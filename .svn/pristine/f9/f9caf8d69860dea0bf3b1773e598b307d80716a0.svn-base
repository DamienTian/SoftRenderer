//#pragma once
#ifndef __MESH_H
#define __MESH_H

#include "Vertex.h"
#include "Bound.h"
#include "Transform.h"

class Mesh
{
public:
	// 顶点缓冲与顶点数量
	Vertex * _verticesBuffer;
	_INT _verticesCount;

	// 顶点索引缓冲
	_INT * _indicesBuffer;
	_INT _indicesCount;

	// AABB 包围盒
	AABB * _bound;

	// 构造 + 析构函数
	Mesh();
	Mesh(_INT verticesCount, _INT indexCount);
	Mesh(const Mesh& other);
	~Mesh();

	// 基于现在的 Mesh 更改包围盒大小
	void InitBound(AABB * bound);
	
	// 读取一个 OBJ 模型
	bool ReadInOBJ(std::string path);
};

#endif // !__MESH_H